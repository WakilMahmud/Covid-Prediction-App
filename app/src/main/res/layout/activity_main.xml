<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Covid Prediction"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="fever (Temperature)"
        android:id="@+id/fever"
        android:layout_marginTop="10dp"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="bodypain (0/1)"
        android:id="@+id/bodypain"
        android:layout_marginTop="10dp"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="age"
        android:id="@+id/age"
        android:layout_marginTop="10dp"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="runnynose (0/1)"
        android:id="@+id/runnynose"
        android:layout_marginTop="10dp"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="diffbreath (-1/0/1)"
        android:id="@+id/diffbreath"
        android:layout_marginTop="10dp"
        ></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="predict"
        android:layout_marginTop="10dp"
        android:id="@+id/predict"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="result"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:id="@+id/result"></TextView>

</LinearLayout>